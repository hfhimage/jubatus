import Options

# subdirs = '''
# common plugin stat
# classifier fv_converter recommender regression storage
# framework server
# cmd jubavisor
# graph
# '''
subdirs = '''
common plugin fv_converter classifier storage
framework server cmd jubavisor
'''

def options(opt):
  opt.recurse(subdirs)

def configure(conf):
  conf.recurse(subdirs)

def build(bld):
  bld.recurse(subdirs)
#  bld.install_files('${PREFIX}/include', 'jubatus.hpp')
  bld.install_files('${PREFIX}/include/jubatus',
                    ['config.hpp', 'plugin.hpp', 'framework.hpp'])
